{
    "name": "tkhamez/slim-role-auth",
    "description": "Role based authorization for the Slim framework",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^7.1",
        "psr/http-message": "^1.0",
        "slim/slim": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0"
    },
    "suggest": {
        "ext-xdebug": "*"
    },
    "autoload": {
        "psr-4": {
            "Tkhamez\\Slim\\RoleAuth\\": "RoleAuth"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage"
    }
}
